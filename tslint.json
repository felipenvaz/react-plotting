{
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "rules": {
        "quotemark": [
            true,
            "single",
            "jsx-double",
            "avoid-escape"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "prefer-const": [
            true
        ],
        "curly": [
            true,
            "ignore-same-line"
        ],
        "no-submodule-imports": false,
        "no-implicit-dependencies": false,
        "object-literal-sort-keys": false,
        "array-type": [
            true,
            "array"
        ],
        "no-empty-interface": false,
        "indent": [
            true,
            "spaces",
            4
        ]
    }
}